.carro_page
	.titulo_page
		display none
	.btn
		width 100%	
.carro_lineas
	.etiquetas
		display none
	.lineas_items
		.acciones_linea
			border-top 1px solid #f4f4f4			
			border-bottom 2px solid #f4f4f4
			margin-top 5px
			padding 5px 0
			font-family f_imprenta
			text-transform uppercase
			font-weight bold
			.eliminar
				cursor pointer
		.img_linea
			width 50%
			float right
		.detalle_linea
			width 50%
			padding-top 20px
			.nombre
				font-family f_imprenta
				font-weight bold
				text-transform uppercase
				font-size 20px
			.color
				text-transform uppercase
		.precio_linea
			margin-top 15px
		.cantidad_linea
			margin 10px
			.cantidad
				border 1px solid #f4f4f4
				padding 8px 20px
			.cant
				cursor pointer
				display inline-block
				color #ccc
				&:hover
					color #333
		.subtotal_linea
			.etiqueta_mobil
				display block
	.carga_linea
		display none
		z-index 2
		width 100%
		position absolute
		height 100%
		background-color rgba(255,255,255,0.5)
		left 0
.total_carro
	margin 30px 0
	table
		width 100%
		font-size 1.1em
		tr
			td
				padding 8px
				border-top 1px solid #f4f4f4
				&.sin-borde
					border-top none
		.tabla_total_carro
			font-size 1.2em
.mini-cart
	position relative
	.mini-cart-label
		display none
	.mini-cart-container .icon-cart-stripe
		color #f3f3f3
	.mini-cart-label-movil
			display none
	.mini-cart-items
		background #468847
		width: 20px;
		display: inline-block;
		line-height: 20px;
		text-align: center;
		border-radius: 10px;
		position: absolute;
		right: -5px;
		top: 10px;
		font-weight: 700;
		font-size: .8em;
@media (min-width: 992px)
	.mini-cart
		float right
		position relative
		line-height 5pc
		z-index 200
		padding 0 25px
		height 100%
		&:hover
			background #f4f4f4			
			.mini_cart_head
				cursor pointer
			.mini_cart_lineas
				display block
		.mini_cart_head
			font-family f_imprenta					
			letter-spacing 1px
		.mini-cart-label
			display inline-block
		.mini-cart-label-movil		
			display none
		.mini-cart-container .icon-cart-stripe
			font-size 1.4em
			vertical-align text-bottom
		.mini-cart-items
			color #fff
			width: 20px;
			display: inline-block;
			line-height: 20px;
			text-align: center;
			border-radius: 10px;
			position: absolute;
			right: 10px;
			top: 20px;
			font-weight: 700;
			font-size: .8em;
		.mini_cart_lineas
			position absolute
			display none
			background #fff
			width 25em
			top 86px
			right 0
			box-shadow 0 2px 5px rgba(0,0,0,.16)
			.mini-cart-header
				font-size 15px
				padding 1em
				margin 0px
			.lineas-mini-cart
				.mini-linea
					display flex
					padding 1em
					border-bottom 1px solid #f4f4f4
					.mini-linea-imagen
						width 120px
					.mini-linea-datos
						line-height initial
						margin-left 15px
						h3
							margin 0
							font-size 15px
							letter-spacing 1px
							&:hover
								text-decoration underline
						.item
							font-size 0.9em
						.precios
							font-weight bold
							font-family georgia
							font-size 14px
			.mini-cart-subtotal
				line-height initial
				padding 0.5em
				background #f4f4f4
				text-align right
				.value
					margin-left 10px
			.mini-cart-botones
				padding-top 10px 
				margin-bottom 20px
				
	





